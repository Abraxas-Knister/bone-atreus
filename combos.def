// base layer
/*
  ┌───────┬───────┬───────┬───────┬───────┐                        ┌───────┬───────┬───────┬───────┬───────┐
  │       │       │       │       │       │                        │       │       │       │       │       │
  ├───────┼───────┼───────┼───────┼───────┤                        ├───────┼───────┼───────┼───────┼───────┤
  │       │       │       │   •   │       │                        │       │   •︎   │       │       │       │
  ├───────┼───────┼───────┼───────┼───────┼───────┐        ┌───────┼───────┼───────┼───────┼───────┼───────┤
  │       │      tab   escape     │       │       │        │       │       │  backspace  enter     │       │
  ├───────┼───────┼───────┼───────┼───────┼───────┤        ├───────┼───────┼───────┼───────┼───────┼───────┤
  │       │       │       │       │   •  alt      │        │     strg  •   │       │       │       │       │
  └───────┴───────┴───────┴───────┴───────┴───────┘        └───────┴───────┴───────┴───────┴───────┴───────┘
*/
COMB(backspace,  KC_BSPC,  DE_Z,     KC_COMM)
COMB(enter,      KC_ENT,   KC_COMM,  KC_DOT)
COMB(escape,     KC_ESC,   DE_UDIA,  DE_ADIA)
COMB(tab,        KC_TAB,   KC_V,     DE_UDIA)
COMB(alt,        _ALT_,    _SFT_,    K_SYM)
COMB(strg,       _CTL_,    K_NAV,    KC_SPC)

// numpad layer
/*
  ┌───────┬───────┬───────┬───────┬───────┐                        ┌───────┬───────┬───────┬───────┬───────┐
  │       │       │       │       │       │                        │       │       │       │       │       │
  ├───────┼───────┼───────┼───────┼───────┤                        ├───────┼─times─┼divided┼───────┼───────┤
  │       │       │       │   •   │       │                        │    lparen •   │       │       │       │
  ├───────┼───────┼───────┼───────┼───────┼───────┐        ┌───────┼───────┼─plus──┼─minus─┼───────┼───────┤
  │       │       │       │       │       │       │        │       │    rparen     │       │       │       │
  ├───────┼───────┼───────┼───────┼───────┼───────┤        ├───────┼───────┼───────┼───────┼───────┼───────┤
  │       │       │       │       │   •   │       │        │ hold  │   •   │       │       │       │       │
  └───────┴───────┴───────┴───────┴───────┴───────┘        └───────┴───────┴───────┴───────┴───────┴───────┘
*/
COMB(plus,     DE_PLUS,  KC_1,     KC_4)
COMB(minus,    DE_MINS,  KC_2,     KC_5)
COMB(times,    DE_ASTR,  KC_4,     KC_7)
COMB(divided,  DE_SLSH,  KC_5,     KC_8)
COMB(lparen,   DE_LPRN,  DE_LBRC,  KC_4)
COMB(rparen,   DE_RPRN,  DE_RBRC,  KC_1)

